<div class="logo">
  <%= image_tag "Snapt-logo-blue.png" %>
  <form class="auth_form" action="<%= path %>" method="post">
    <%= auth_token %>
        <input
          type="text"
          class="username form-control"
          name="user[username]"
          value="<%= @user.username %>"
          placeholder="Username"
        >

      <% if path == users_url %>
          <input
            type="text"
            class="form-control"
            name="user[email]"
            placeholder='Email'
            value="<%= @user.email %>"
          >
      <% end %>

        <input
          class="password form-control"
          type="password"
          name="user[password]"
          placeholder="Password"
        >

        <input
          class="submit-btn btn btn-primary btn-lg"
          type="submit"
          value="<%= action %>"
        >

      <% if path == session_url %>
          <a href="<%= new_user_url %>">
            <button type="button" class="btn btn btn-primary btn-lg">New Users</button>
          </a>
            <button type="button"
              class="guest-login btn btn btn-success btn-lg">
                Guest Account
            </button>
      <% else %>
        <a href="<%= new_session_url %>">
          <button type="button" class="btn btn btn-primary btn-lg">Returning Users</button>
        </a>
      <% end %>
  </form>
</div>
<script>
  var loginGuest = function (e) {
    $('.username').val('guest');
    $('.password').val('password')
    $('.submit-btn').click();
  }
  $('.guest-login').on('click', loginGuest)
</script>
