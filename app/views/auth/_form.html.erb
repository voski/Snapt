<div class="logo">
  <%= image_tag "Snapt-logo-blue.png" %>
  <form class="auth_form" action="<%= path %>" method="post">
    <%= auth_token %>
    <ul>
      <li>
        <input
          type="text"
          class="username"
          name="user[username]"
          value="<%= @user.username %>"
          placeholder="Username"
        >
      </li>

      <% if path == users_url %>
        <li>
          <input
            type="text"
            name="user[email]"
            placeholder='Email'
            value="<%= @user.email %>"
          >
        </li>
      <% end %>

      <li>
        <input
          class="password"
          type="password"
          name="user[password]"
          placeholder="Password"
        >
      </li>

      <li>
        <input
          class="submit-btn"
          type="submit"
          value="<%= action %>"
        >
      </li>

      <% if path == session_url %>
        <li>
          <a href="<%= new_user_url %>">
            <button type="button">New Users</button>
          </a>
        </li>
        <li>
            <button type="button"
              class="guest-login">
                Guest Account
            </button>
        </li>
      <% else %>
      <li>
        <a href="<%= new_session_url %>">
          <button type="button">returning users</button>
        </a>
      </li>
      <% end %>
    </ul>
  </form>
</div>
<script>
  var loginGuest = function (e) {
    $('.username').val('voski');
    $('.password').val('password')
    $('.submit-btn').click();
  }
  $('.guest-login').on('click', loginGuest)
</script>
